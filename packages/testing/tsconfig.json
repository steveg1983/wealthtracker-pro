{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../apps/web/node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@testing": ["packages/testing/index.d.ts"],
      "@testing/*": ["packages/testing/*"],
      "@app-types/*": ["packages/types/*"],
      "@wealthtracker/core": ["packages/core/index.ts"],
      "@wealthtracker/core/*": ["packages/core/*"],
      "@wealthtracker/utils": ["packages/utils/index.ts"],
      "@wealthtracker/utils/*": ["packages/utils/*"],
      "@wealthtracker/types": ["packages/types/index.ts"],
      "@wealthtracker/types/*": ["packages/types/*"],
      "@testing-library/react": ["apps/web/node_modules/@testing-library/react"],
      "@testing-library/react/*": ["apps/web/node_modules/@testing-library/react/*"],
      "@testing-library/jest-dom": ["apps/web/node_modules/@testing-library/jest-dom"],
      "@testing-library/jest-dom/*": ["apps/web/node_modules/@testing-library/jest-dom/*"],
      "@testing-library/user-event": ["apps/web/node_modules/@testing-library/user-event"],
      "@testing-library/user-event/*": ["apps/web/node_modules/@testing-library/user-event/*"],
      "@clerk/clerk-react": ["apps/web/node_modules/@clerk/clerk-react"],
      "@clerk/clerk-react/*": ["apps/web/node_modules/@clerk/clerk-react/*"],
      "react-router-dom": ["apps/web/node_modules/react-router-dom"],
      "react-router-dom/*": ["apps/web/node_modules/react-router-dom/*"],
      "vitest": ["apps/web/node_modules/vitest"],
      "vitest/*": ["apps/web/node_modules/vitest/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
