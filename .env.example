# WealthTracker Environment Variables
# Copy this file to .env.local and fill in your values

# Clerk Authentication (Required)
# Get these from https://dashboard.clerk.com
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here

# Optional: Clerk Secret Key (for backend/API routes)
CLERK_SECRET_KEY=sk_test_your_secret_here

# Optional: Webhook signing secret (for Clerk webhooks)
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# App Configuration
VITE_APP_NAME=WealthTracker
VITE_APP_URL=http://localhost:5173

# Feature Flags
VITE_ENABLE_PASSKEYS=true
VITE_ENABLE_MFA=true
VITE_ENABLE_BIOMETRIC=true

# Security
VITE_SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
VITE_REQUIRE_EMAIL_VERIFICATION=false  # Set to true in production

# Analytics (Optional)
VITE_POSTHOG_KEY=
VITE_SENTRY_DSN=

# Supabase Configuration (Required for Backend)
# Get these from https://app.supabase.com/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-public-key-here

# Supabase Service Role (Backend only - NEVER expose to client!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe Configuration (Required for subscriptions)
# Get these from https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Configuration
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_endpoint_secret

# Stripe Product and Price IDs (Set after creating products in dashboard)
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly_id
STRIPE_PRO_PRICE_ID=price_pro_monthly_id

# API Configuration (Future)
VITE_API_URL=http://localhost:3001
VITE_WEBSOCKET_URL=ws://localhost:3001
